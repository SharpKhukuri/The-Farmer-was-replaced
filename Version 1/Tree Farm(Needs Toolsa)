import Toolsa
def harvest_tree():
	while True:
		for i in range(get_world_size()):
				for j in range(get_world_size()):
					if (get_pos_x() + get_pos_y()) % 2 == 0:
						if can_harvest():
							harvest()
						plant(Entities.Tree)
					else:
						if can_harvest():
							harvest()
						plant(Entities.Sunflower)		
					if Toolsa.water_level():
						use_item(Items.Water)	
					move(North)
				move(East)	

Toolsa.move_origin()
Toolsa.till_everything()
harvest_tree()
